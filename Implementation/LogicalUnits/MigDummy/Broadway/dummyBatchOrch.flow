stages:
  Stage 1:
    actors:
      Initialize EXEC_ID:
        parent: DbCommand
        in:
          interface:
            const: fabric
          sql:
            const: set_global global 'k2_ws.EXEC_ID=-1'
      'getMigExecId: InnerFlow':
        parent: InnerFlow
        in:
          flowName:
            const: getMigExecId
        out:
          execId:
            schema: '#ref'
      initSfCounters:
        parent: InnerFlow
        in:
          flowName:
            const: initSfCounters
      initDsCounters:
        parent: InnerFlow
        in:
          flowName:
            const: initDsCounters
  Stage 2:
    actors:
      Set new EXEC_ID:
        parent: DbCommand
        in:
          interface:
            const: fabric
          sql:
            const: set_global global 'k2_ws.EXEC_ID=${@execId}'
          execId:
            link: 'getMigExecId: InnerFlow/execId/execId'
            schema: integer
            mandatory: false
      genIdList:
        parent: InnerFlow
        in:
          flowName:
            const: genIdList
        out:
          idList:
            schema: string
          listLength:
            schema: integer
  Extract batch:
    actors:
      Batch Command:
        parent: DbCommand
        in:
          interface:
            const: fabric
          sql:
            const: BATCH MigDummy.(${@idList}) FABRIC_COMMAND="broadway MigDummy.dummyEntOrch
              exec_id=${@execId} iid=?" WITH ASYNC=true
          idList:
            link: genIdList/idList
            schema: string
            mandatory: false
          execId:
            link: 'getMigExecId: InnerFlow/execId/execId'
            schema: integer
            mandatory: false
        out:
          result:
            schema: '#ref'
  Wait for Extract to finish:
    actors:
      Batch Wait:
        parent: BatchWait
        in:
          batchId:
            link:
              path: Batch Command/result/Batch id
              iterate: First
  Stage 4:
    actors:
      MathMultiply1:
        parent: MathMultiply
        in:
          b:
            const: -1
            schema: integer
          a:
            link: Batch Wait/failed
      SF Load UID:
        parent: StringFormat
        in:
          format:
            const: sfLoadDummyProc_${execId}
          execId:
            link: 'getMigExecId: InnerFlow/execId/execId'
            schema: integer
            mandatory: false
      DS Load UID:
        parent: StringFormat
        in:
          format:
            const: dsLoadDummyProc_${execId}
          execId:
            link: 'getMigExecId: InnerFlow/execId/execId'
            schema: integer
            mandatory: false
  Stage 3:
    actors:
      MathAdd1:
        parent: MathAdd
        in:
          a:
            link: genIdList/listLength
          b:
            link: MathMultiply1/result
  SF Load:
    actors:
      sfLoadDummyProc:
        parent: BroadwayJob
        in:
          flowName:
            const: sfLoadDummyProc
          uid:
            const: null
            link: SF Load UID/string
          noOfCust:
            link: MathAdd1/result
            schema: integer
            mandatory: false
      dsLoadDummyProc:
        parent: BroadwayJob
        in:
          flowName:
            const: dsLoadDummyProc
          uid:
            const: null
            link: DS Load UID/string
          noOfCust:
            link: MathAdd1/result
            schema: integer
            mandatory: false
  PONR:
    actors:
      SF Load Wait:
        parent: JobWait
        in:
          jobType:
            const: BROADWAY_JOB
          name:
            const: MigDummy.sfLoadDummyProc
          uid:
            const: null
            link: SF Load UID/string
      DS Load Wait:
        parent: JobWait
        in:
          jobType:
            const: BROADWAY_JOB
          name:
            const: MigDummy.dsLoadDummyProc
          uid:
            const: null
            link: DS Load UID/string
schemas:
  'getMigExecId: InnerFlow.out.execId':
    type: object
    properties:
      execId:
        type: integer
  Batch Command.out.result:
    type: array
    items:
      type: object
      properties:
        Batch id:
          type: string
        Execution id:
          type: string
        Notes:
          type: string
